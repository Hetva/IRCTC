<odoo>
    <data>

        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="timetable_list">
            <field name="name">timetable list</field>
            <field name="model">timetable.model</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="train_id"/>
                    <field name="train_name_id"/>
                    <field name="station_name"/>
                    <field name="train_arrival_time"/>
                    <field name="train_arrival_date"/>
                    <field name="train_halt_time"/>
                    <field name="train_departs"/>
                    <field name="train_departs_time"/>
                    <field name="train_departs_date"/>
                </tree>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="timetable_action_window">
            <field name="name">Timetable List</field>
            <field name="res_model">timetable.model</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>